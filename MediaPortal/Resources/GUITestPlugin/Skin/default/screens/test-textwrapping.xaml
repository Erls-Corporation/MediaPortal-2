      <Label Color="{ThemeResource TextColor}" Background="Black" FontSize="30" Content="Simple text y g" Margin="10"/>
      <Label Color="{ThemeResource TextColor}" Background="Black" FontSize="30" Content="Text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text wrap 1 y g" Margin="10" Wrap="True"/>
      <Label Color="{ThemeResource TextColor}" Background="Black" FontSize="30" Content="Text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text wrap 2 y g" Margin="10" Wrap="True"/>

      <Label Color="{ThemeResource TextColor}" Background="Black" FontSize="50" Content="Simple text y g" Margin="10"/>
      <Label Color="{ThemeResource TextColor}" Background="Black" FontSize="50" Content="Text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text wrap 1 y g" Margin="10" Wrap="True"/>
      <Label Color="{ThemeResource TextColor}" Background="Black" FontSize="50" Content="Text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text wrap 2 y g" Margin="10" Wrap="True"/>
    </ListView>
  </DockPanel>
</Screen>